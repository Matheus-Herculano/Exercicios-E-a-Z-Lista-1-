#include <stdio.h>
void main()
{
    int a, b, c, aux;

    printf("Escreva o valor da variável a: ");
    scanf("%d", &a);

    printf("Escreva o valor da variável b: ");
    scanf("%d", &b);

    printf("Escreva o valor da variável c: ");
    scanf("%d", &c);

    aux = (a+b+c)*(a+b+c);

    printf("O valor de (a+b+c)^2 eh: %d", aux);
}
